{
  "{{chrome}}.name": "betPlugin",
  "{{firefox}}.name": "betPlugin",

  "version": "1.0.1",
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,

  "permissions": ["storage", "activeTab", "scripting"],

  "{{chrome}}.content_scripts": [
    {
      "matches": [
        "https://fon.bet/*",
        "https://pari.ru/*",
        "https://zenit.win/*",
        "https://www.marathonbet.ru/*"
      ],
      "js": ["src/content.ts"],
      "run_at": "document_start"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["bookmakers/*.js", "src/popup.js", "popup.css"],
      "matches": [
        "https://fon.bet/*",
        "https://pari.ru/*",
        "https://zenit.win/*",
        "https://www.marathonbet.ru/*"
      ]
    }
  ]
}
